{
  "containerDefinitions": [
    {
      "name": "streaming",
      "image": "115278533354.dkr.ecr.us-east-1.amazonaws.com/electnow-mastodon-production:latest",
      "cpu": 0,
      "links": [],
      "portMappings": [
        {
          "containerPort": 4000,
          "hostPort": 4000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "entryPoint": [],
      "command": ["bash", "-c", "pm2-runtime ./streaming"],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::mastodon-env-files/production.env",
          "type": "s3"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/electnow-mastodon-production/streaming",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        },
        "secretOptions": []
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:4000/api/v1/streaming/health || exit 1"
        ],
        "interval": 60,
        "timeout": 30,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    }
  ],
  "family": "electnow-mastodon-production-streaming",
  "taskRoleArn": "arn:aws:iam::115278533354:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::115278533354:role/ecsTaskRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
